---
import LinkBtn from "../components/LinkBtn.astro";
import Layout from "../layouts/Layout.astro"

const { searchParams } = new URL(Astro.request.url);
const name = searchParams.get('name');


---

<Layout title="Exito! | ReuSoft2024">
  <section class="py-24 flex flex-col items-center min-h-screen justify-center">
    <h1 class="mt-3 text-[3.5rem] font-bold leading-[4rem] tracking-tight text-white mx-4 text-center">
      ¡Felicidades {name}!
    </h1>
    <p class="text-[2.5rem] font-medium leading-[4rem] tracking-tight text-white">Ya apartaste tu lugar</p>
    <p class="text-gray-400 mb-12 mx-12 text-center">Únete al <a href="https://chat.whatsapp.com/Cn7SIt1ZDIfGK3SrdXvlMC" class="text-[#f4427d] underline">grupo de WhatsApp</a> para estar al tanto del evento</p>
    <LinkBtn href="/">
      Regresar al inicio
    </LinkBtn>
  </section>
</Layout>
<script>
  import confetti from 'canvas-confetti';

  var duration = 0.5 * 1000;
  var end = Date.now() + duration;

  (function frame() {
    // launch a few confetti from the left edge
    confetti({
      particleCount: 20,
      angle: 60,
      spread: 100,
      origin: { x: 0 }
    });
    // and launch a few from the right edge
    confetti({
      particleCount: 20,
      angle: 120,
      spread: 100,
      origin: { x: 1 }
    });

    // keep going until we are out of time
    if (Date.now() < end) {
      requestAnimationFrame(frame);
    }
  }());
</script>